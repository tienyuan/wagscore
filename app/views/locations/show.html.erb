<script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>

<%= link_to 'Back', root_path %>

<h3><%= @location.name %></h3>

<p>
  <strong>Description:</strong><br/>
  <%= @location.description %>
</p>

<p>
  <strong>Url:</strong><br/>
  <%= @location.url %>
</p>
<p>
  <strong>Address:</strong><br/>
  <address>
    <%= @location.address %><br>
    <%= @location.city %>, <%= @location.state %> <%= @location.zipcode %><br>
  </address>
  <% @location.categories.each do |category| %>
    <%= category.name %><br/>
  <% end %>
  <% if !@location.flagged %>
    <%= link_to 'Flag', location_path(id: @location.id, location:{flagged: true}), title: "Flag complete", method: :put %>
  <% else %>
    Flagged for review
  <% end %>
  <% if current_user && current_user.admin %>
    <%= link_to 'Edit', edit_location_path(@location) %>
    <%= link_to 'Destroy', @location, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</p>
<br/>
Nearby locations:<br/>
<% @location.nearbys(10).each do |nearby_location| %>
  <%= link_to nearby_location.name, nearby_location %><br/>
<% end %>
<br/>

<div style='width: 960px;'>
  <div id="map" style='width: 960px; height: 400px;'></div>
</div>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
</script>
