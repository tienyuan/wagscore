<script src="//maps.google.com/maps/api/js?v=3.13&sensor=false&libraries=geometry" type="text/javascript"></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>

<%= form_tag locations_path, method: :get do %>
  <%= label :search_location, "Search locations near: " %>
  <%= text_field_tag :search_location, params[:search_location], placeholder: "Place, Address, Intersection or Zip" %>

  <%= label :distance, "Distance: " %>
  <%= select_tag :distance, options_for_select([["1 mi", 1], ["2 mi", 2], ["5 mi", 5], ["10 mi", 10]]) %>

  <%= submit_tag "Search" %>
  <%= link_to "Clear Search", root_path %>
<% end %>

<div id="panel" >
  <input id="address" type="textbox" value="Sydney, NSW">
  <input type="button" value="Geocode" onclick="codeAddress()">
</div>

<div style='width: 960px;'>
  <div id="map" style='width: 960px; height: 400px;'></div>
</div>

<div class="row">
  <% if @locations.present? %>
    <% @locations.each do |location| %>
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <div class="caption">
              <h3><%= link_to location.name, location %></h3>
              <p><%= location.description %></p> 
              <% if current_user && current_user.admin %>
                <%= link_to 'Edit', edit_location_path(location) %> /
                <%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
            </div>
          </div>
        </div>
    <% end %>
  <% end %>
</div>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%=raw @map_marker_list.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });

 initialize();
</script>
